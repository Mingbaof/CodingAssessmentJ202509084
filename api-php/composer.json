{
  "name": "mingbaof/coding-assessment",
  "description": "A PHP back end connecting to Xero custom connection for Coding Assessment",
  "type": "project",
  "require": {
    "php": ">=8.1",
    "xeroapi/xero-php-oauth2": "^5.0",
    "vlucas/phpdotenv": "^5.6",
    "monolog/monolog": "^3.6",
    "league/oauth2-client": "^2.7"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit"
  }
}
